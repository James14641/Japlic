FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}
offCentre 1; //  offCentre = 1 for fully implicit for Co > CoLimit
CoLimit  6.0*0.5; 

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    explicit        Gauss vanLeer;
    implicit        Gauss upwind;
    upwind          Gauss upwind; 
}

laplacianSchemes
{
    default         none;
}

interpolationSchemes
{
    default         none;
}

snGradSchemes
{
    default         none;
}


